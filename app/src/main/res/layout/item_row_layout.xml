<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/user_image"
        tools:src="@drawable/ic_launcher_background" />

    <ProgressBar
        android:id="@+id/pb_image_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_image"
        android:layout_alignEnd="@id/iv_user_image"
        android:layout_alignLeft="@id/iv_user_image"
        android:layout_alignRight="@id/iv_user_image"
        android:layout_alignStart="@id/iv_user_image"
        android:layout_alignTop="@id/iv_user_image" />

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_image"
        android:layout_alignTop="@id/iv_user_image"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginStart="@dimen/spacing"
        android:layout_toEndOf="@id/iv_user_image"
        android:layout_toRightOf="@id/iv_user_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textSize="@dimen/text_size_small"
        tools:text="adskjansfkjnasfkjknad" />

</RelativeLayout>